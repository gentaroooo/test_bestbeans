<header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Best beans</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <% if logged_in? %>
                <!--新規投稿-->
                <li class="nav-item"><%= link_to new_post_path, class: 'nav-link' do %><i class="fas fa-plus"></i><% end %></li>
                <!--プロフィール-->
                <li class="nav-item"><%= link_to user_path(current_user), class: 'nav-link' do %><i class="fas fa-user"></i><% end %></li>
                <!--ユーザー一覧-->
                <li class="nav-item"><%= link_to users_path, class: 'nav-link' do %><i class="fas fa-users"></i><% end %></li>

                <li class="nav-item dropdown">
                  <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name.truncate(10) %></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <!--プロフィール-->
                        <li class="dropdown-item"><%= link_to user_path(current_user), class: "btn" do %>
                        <i class="fas fa-user-circle"></i>プロフィール<% end %>
                        <li class="dropdown-divider"></li>
                        <!--プロフィール編集-->
                        <li class="dropdown-item"><%= link_to edit_user_path(current_user), class: "btn" do %>
                        <i class="fas fa-user-edit"></i>プロフィール編集<% end %>
                        <li class="dropdown-divider"></li>
                        <li class="dropdown-item"><%= link_to logout_path, method: :delete, class: "btn" do  %>
                        <i class="fas fa-sign-out-alt"></i>ログアウト<% end %></li>
                    </ul>
                </li>
                <% else %>
                    <li class="nav-item"><%= link_to '新規登録', signup_path, class: 'nav-link' %></li>
                    <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>